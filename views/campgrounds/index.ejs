<%- include("../partials/header") %>


<div class="container">
	

	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpCamp!</h1>
			<p>View our hand-picked campgrounds from all over the world!</p>
			<p>
				<a href="/campgrounds/new" class="btn btn-primary">Add New Campground</a>
			</p>
		</div>

	</header>

	<div class="row">
		<div class="col-lg-12">
			<% if(error) { %>
				<h3>
					Error Loading Campgrounds
				</h3>
			<% } else { %>
				<h3>
					Our Most Popular Campgrounds
				</h3>
			<% } %>
		</div>
	</div>
	
	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% if(!error) { %>

			<% campgrounds.forEach( (campground) => { %>
				<div class="col-lg-3 col-md-4 col-sm-6">
					<div class="card" style="width:100%; margin: 5px;">
						<img src="<%= campground.image  %>" class="card-img-top" alt="campground image">
						<div class="card-body">
							<h4 class="card-title">
								<%= campground.name %>
							</h4>
							<p class="card-text">
								<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
								<!-- <%= campground.description %> -->
							</p>
						</div>
					</div>


				</div>
			<% }); %>
		<% } %>

	</div>


</div>

<%- include("../partials/footer") %>
