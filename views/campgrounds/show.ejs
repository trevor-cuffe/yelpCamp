<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">YelpCamp</p>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>
		<div class="col-md-9">
			
			<div class="card mb-2">
				<img src="<%= campground.image %>" class="card-img-top" alt="Campsite Image">
				<div class="card-body">
					<h4 class="float-right">$9.00/night</h4>
					<h4 class="card-title"><a href="#"><%= campground.name %></a></h4>
					<p class="card-text"><%= campground.description %></p>
					<p class="card-text">
						<em>Submitted by: <%= campground.author.username %></em>
					</p>
					<a class="btn btn-warning btn-sm" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
					<form id="delete-form" action="/campgrounds/<%= campground._id %>/?_method=DELETE" method="POST">
						<button class="btn btn-danger btn-sm">Delete</button>
					</form>
				</div>
			</div>
			
			<div class="card bg-light mb-3">
				<div class="text-right card-body">
					<a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
				</div>
				<div class="card-body">
					<% campground.comments.forEach( (comment) => { %>
						<div class="row">
							<div class="col-md-12 card-text">
								<strong><%= comment.author.username %></strong>
								<span class="float-right">10 days ago</span>
								<p><%= comment.text %></p>
								<!-- Allow the matching user to remove their comment -->
								<% if(currentUser._id == comment.author.id) { %> 
									<button class="btn btn-warning">Delete Comment</button>
								<% } %>
							</div>
						</div>
					<% }) %>
				</div>
			</div>
			
		</div>
	</div>
</div>

<%- include("../partials/footer") %>